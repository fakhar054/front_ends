<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thinkgeniux.front_ends.MainActivity"
    android:orientation="vertical">


  <TextView
      android:layout_gravity="center"
      android:textSize="18dp"
      android:textColor="#000"
     android:layout_marginTop="10dp"
      android:text="Login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <View
      android:layout_marginTop="5dp"
      android:layout_width="wrap_content"
      android:layout_height="2dp"
      android:background="#d9d7d7"/>



  <EditText
      android:inputType="text"
      android:paddingLeft="40dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:hint="Username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <EditText
        android:inputType="textWebPassword"
        android:paddingLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/forget"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="5dp"
        android:text="Forget Passowrd?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  <Button
      android:id="@+id/login"
      android:layout_marginRight="20dp"
      android:layout_marginLeft="20dp"
      android:textSize="15dp"
      android:textColor="#f9f6f6"
      android:text="Login"
      android:layout_marginTop="20dp"
      android:background="@drawable/roundd_button"
      android:layout_width="match_parent"
      android:layout_height="40dp" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp">

  <View
      android:layout_marginTop="15dp"
      android:layout_width="140dp"
      android:layout_height="2dp"
      android:background="#d9d7d7"/>
    <TextView
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/circle_text"
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  <View
      android:background="#d9d7d7"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="1dp"
      android:layout_width="240dp"
      android:layout_height="2dp"/>
  </LinearLayout>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center">

  <TextView
      android:padding="4dp"
      android:layout_gravity="center"
      android:textColor="#000"
      android:layout_marginTop="10dp"
      android:text="New User?"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/reg"
        android:layout_gravity="center"
        android:textColor="#f9606c"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="4dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:text="Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


  </LinearLayout>


</LinearLayout>
